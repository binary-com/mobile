#, no-c-format
msgid "<primary>server</primary><secondary>web</secondary>"
msgstr "<primary>servidor</primary><secondary>web</secondary>"

#. Tag: indexterm
#, no-c-format
#| msgid "<primary>spammer</primary>"
msgid "<primary>web server</primary>"

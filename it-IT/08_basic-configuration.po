#. Tag: title
#, no-c-format
msgid "<command>locate</command> and <command>updatedb</command>"
msgstr "<command>locate</command> e <command>updatedb</command>"

#. Tag: indexterm
#, no-c-format
msgid "<primary><command>locate</command></primary>"

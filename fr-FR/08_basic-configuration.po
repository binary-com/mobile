#, no-c-format
msgid "<primary>environment</primary>"
msgstr "<primary><foreignphrase>environment</foreignphrase></primary>"

#. Tag: indexterm
#, no-c-format
msgid "<primary>locale</primary>"
msgstr "<primary><foreignphrase>locale</foreignphrase></primary>"

